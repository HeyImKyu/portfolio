{% macro card(title, url, extra_classes='') %}
<div class="card-uwu {{ extra_classes }}" onclick="document.location = '{{ url }}'" 
  data-tilt
  data-tilt-speed="1200"
  data-tilt-easing="cubic-bezier(.03,.98,.52,.99)"
  data-tilt-reverse="1"
  data-tilt-max="3">

  <h1 class="card-title">{{ title }}</h1>
  {{ caller() }}
</div>
{% endmacro %}

{% macro kyuties_card(name, url, url_short, img_src, img_alt, extra_classes='') %}
<div class="kyuties-card {{ extra_classes }}" onclick="document.location = '{{ url }}'" 
  data-tilt
  data-tilt-speed="1200"
  data-tilt-easing="cubic-bezier(.03,.98,.52,.99)"
  data-tilt-reverse="1"
  data-tilt-max="3">

  <h1 class="card-title">{{ name }}</h1>
  <img class="card-image" src="{{ img_src }}" alt="{{ img_alt }}"/>
  <p>{{ description }}</p>
  <p>
    <a class="card-link" href="{{ url }}"> {{ url_short }}</a>
  </p>
</div>
{% endmacro %}
